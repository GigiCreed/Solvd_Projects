<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE configuration
        PUBLIC '-//mybatis.org//DTD Config 3.0//EN'
        'http://mybatis.org/dtd/mybatis-3-config.dtd'>
<configuration>
    <properties resource="database.properties"/>
    <typeAliases>
        <typeAlias type="solvd.projects.database.tableclasses.Students" alias="Students"/>
        <typeAlias type="solvd.projects.database.tableclasses.Universities" alias="Universities"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC">
                 <property name="defaultReadOnly" value="false"/>
            </transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${userName}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatisfiles/mappersfiles/StudentsMapper.xml"/>
        <mapper resource="mybatisfiles/mappersfiles/UniversitiesMapper.xml"/>
    </mappers>
</configuration>